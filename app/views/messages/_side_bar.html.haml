.Sidebar
  .Sidebar__content
    .Sidebar__content__top
      .Sidebar__content__top__user-name
        = current_user.name

      .Sidebar__content__top__icon
        .Sidebar__content__top__icon__list
          = link_to new_group_path(current_user)do
            = icon("far", "edit", class: 'writing')
          = link_to edit_user_path(current_user) do
            = icon("fas", "cog", class: 'gear')

       
  .Sidebar__groups
    - current_user.groups.each do |group|
      .Sidebar__groups__list
        = link_to '#' do
          .Sidebar__groups__list__name
            = group.name
          .Sidebar__groups__list__message
            メッセージはまだありません