.Main
  .Main__group
    .Main__group__info
      .Main__group__info__list
        = @group.name
      %ul.Main__group__info__list__member
        Member:
        %li.Main__group__info__list__member__name
          - @group.users.each do |user|
            =user.name
    = link_to edit_group_path(@group),class: 'link' do
      Edit

  .MessageField
    = render @messages

  .Main__message__form
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Main__message__form__big__form
        = f.text_field :content, class: 'Form__inputContent', placeholder: 'type a message'
        = f.label :image, class: 'Form__inputImage' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'Form__submit'